<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainPack.view.ChoiceViewController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="200.0" style="-fx-background-color: #A03324;">
         <children>
            <Button fx:id="reportButton" mnemonicParsing="false" onAction="#createReport" prefHeight="100.0" prefWidth="400.0" style="-fx-background-color: #A03324;" text="Report" textAlignment="CENTER" textFill="#ffd9b5">
               <font>
                  <Font name="System Italic" size="24.0" />
               </font>
            </Button>
            <Button fx:id="bookButton" mnemonicParsing="false" onAction="#createBook" prefHeight="100.0" prefWidth="400.0" style="-fx-background-color: #A03324;" text="Book " textAlignment="CENTER" textFill="#ffd9b5">
               <font>
                  <Font name="System Italic" size="24.0" />
               </font>
            </Button>
            <Button fx:id="articleButton" mnemonicParsing="false" onAction="#createArticle" prefHeight="100.0" prefWidth="102.0" style="-fx-background-color: #A03324;" text="Article" textAlignment="CENTER" textFill="#ffd9b5">
               <font>
                  <Font name="System Italic" size="24.0" />
               </font>
            </Button>
            <Button fx:id="letterButton" mnemonicParsing="false" onAction="#createLetter" prefHeight="100.0" prefWidth="400.0" style="-fx-background-color: #A03324;" text="Letter" textAlignment="CENTER" textFill="#ffd9b5">
               <font>
                  <Font name="System Italic" size="24.0" />
               </font>
            </Button>
            <Button fx:id="emptyButton" mnemonicParsing="false" onAction="#createEmpty" prefHeight="100.0" prefWidth="400.0" style="-fx-background-color: #A03324;" text="Empty" textAlignment="CENTER" textFill="#ffd9b5">
               <font>
                  <Font name="System Italic" size="24.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
